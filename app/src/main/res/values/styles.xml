<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="textAllCaps">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/is_light_status_bar
        </item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">
            @bool/is_light_navigation_bar
        </item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="MyCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">7dp</item>
        <item name="cardElevation">2dp</item>
    </style>

</resources>